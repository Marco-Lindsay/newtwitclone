<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><% if current_user.follows?(user) %>
          <%= link_to 'Unfollow', follow_path(user) %>
          <%else%>
          <%= link_to 'Follow', follow_path(user) %>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

